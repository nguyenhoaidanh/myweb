<%include head.ejs%>
<body >
	<%include nav.ejs%>
		<link rel='stylesheet' href='/css/cart.css' type='text/css' />
	
		<div class="container" id="content">
			<h2>Giỏ hàng của bạn (<span id="sum"><%=data.arrayItem.length%></span> sản phẩm)</h2>
			<h3 class="alert alert-warning" id="delFromCart" style="display:none;width:400px;">Xóa khỏi giỏ hàng thành công</h3>
				
					<% for(var i=0; i<data.arrayItem.length; i++){ %>
						<script> 
						var html='<div class="row">';
						html+='<h3 style="display:none;"><%= data.arrayItem[i].id %></h3>';
						html+='<div class="col-md-1">';
						html+='<img id="imgSrc" src="<%= data.arrayItem[i].imgSrc %>"></img>';
						html+='</div>';	//end col
						html+='<div class="col-md-5 col-md-offset-1 item">';
						html+='<h3 id="itemName" ><%= data.arrayItem[i].itemName %></h3>';
						
						html+='<p ><span class="glyphicon glyphicon-usd"></span><span id="price"><%=data.arrayItem[i].price%></span>';
						html+='&nbsp;&nbsp; <del id="oldPrice"><%=data.arrayItem[i].oldPrice%></del></p>';
						html+='Số lượng : '+'<%=data.arrayItem[i].quantity%>';
						html+='<p class="text-right"><button data-idIncart="<%= data.arrayItem[i].id %>"class="delFromCart btn btn-warning">Xóa</button>';
						html+='<button class=" btn btn-success" onClick="alert(1)">Mua ngay</button></p>';
						html+='</div>'; //end col
						html+='</div>'; //end row
						

					
					
					
					
		



						document.write(html);
						</script>
					<%}%>
			
		</div>
		

			

	<%include foot.ejs%>
</body >
</html>