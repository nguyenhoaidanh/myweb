<%include head.ejs%>
<body >
	<%include nav.ejs%>
	<link rel='stylesheet' href='/css/profile.css' type='text/css' />
	
		
	<div class="container" id="content" >
      <h1>Profile</h1>
      <hr>
      
      <div class="row">
        <!-- left column -->
        <div class="col-md-3">
          <div class="text-center">
            <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
          </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">



          <form class="form-horizontal" role="form">


            <div class="form-group">
              <label class="col-md-3 control-label"></label>
              <div class="col-md-8">
                <h3 style="margin-left:-170px">Personal info
                  <a style="float:right" href="/editProfile" class="btn btn-primary">Edit</a>
                </h3>
              </div>
            </div>

            

            <div class="form-group">
              <label class="col-lg-3 control-label">User name:</label>
              <div class="col-lg-8">
                <input class="form-control" value="<%= data.username %>" type="text" disabled>
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-3 control-label">Email:</label>
              <div class="col-lg-8">
                <input class="form-control" value="<%= data.userInfo.email %>" type="text" disabled>
              </div>
            </div>

            <div class="form-group">
              <label class="col-lg-3 control-label">Birth date:</label disabled>
              <div class="col-lg-8">
				<input class="form-control" id="bDate" value="" type="text" disabled>
				<script>
							
					
					var time=''	;				
					if('<%=data.userInfo.bDate%>'=='')time='';
					else
					time =convert('<%=data.userInfo.bDate%>');
					document.getElementById('bDate').value=time;
				</script>
                
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-3 control-label">Phone:</label>
              <div class="col-md-8">
                <input class="form-control" value="<%= data.userInfo.phone %>" type="text" disabled>
              </div>
            </div>

            <div class="form-group">
             
              <div class="col-md-8">
               <small>
                  <strong>Signup Date</strong>
                  <%= data.userInfo.dateDK %>
               </small>
              </div>
            </div>

          </form>

        </div> <!-- form colum-->
      </div> <!-- row-->
    </div>	<!-- contaner-->
    <hr>

			

	<%include foot.ejs%>
</body >
</html>